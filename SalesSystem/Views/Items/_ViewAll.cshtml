@model IEnumerable<Item>

@{
    ViewData["Title"] = " سجل الاصناف";
}

<a class="btn btn-success text-white btn-lg" onclick="showInPopup('@Url.Action("AddOrEdit","Items",null,Context.Request.Scheme)','اضافة صنف')">

    <i class="bi bi-plus-circle-dotted"></i>
    اضافة فئه
</a>
@* <a  asp-action="AddOrEdit" class="btn btn-success text-white"><i class="fas fa-random"></i> New Transaction</a>
 *@
@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">لا يوجد اصناف</h4>
        <p class="mb-0">لم يتم اضافة صنف.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-hover" id="sampleTable">
            <thead>
                <tr>
                    <th scope="col">اسم الصنف </th>
                    <th scope="col"> وصف الصنف </th>

                    
                    <th scope="col">الاحداث  </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>



                        <td>@item.Name</td>
                        <td>@item.Descreption</td>


                      

                      <td>
                            <a onclick="showInPopup('@Url.Action("AddOrEdit","Items",new {id=item.Id},Context.Request.Scheme)',' تعديل الصنف')" class="btn btn-info rounded rounded-3 me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="javascript:;" class="btn btn-danger rounded rounded-3 js-delete" data-id="@item.Id">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>




                    </tr>
                }

            </tbody>
        </table>
    </div>
}

